        private function updateNetconfOptions(index:int):void
        {
            if (rbtnRestConf.selected)
            {
                cbErrOpt.enabled = false;
                cbEditLock.enabled = false;
                return;
            }

            cbEditLock.enabled = cbErrOpt.enabled = (adg.getMode() == YangUtil.EDIT_CONFIG || adg.getMode() == YangUtil.DEFAULT);
            if (deviceProfilesXML == null || index < 0)
            {
                return
            }

            var profilename:String = deviceProfiles.getItemAt(index).toString()
            for each (var item:XML in deviceProfilesXML.profile)
            {
                if (item.@type == 'device' && profilename == item.@name)
                {
                    for each (var t:XML in item.options.option)
                    {
                        switch (String(t.@type))
                        {
                            case "err-option":
                                if (t.toString() == "continue-on-error")
                                {
                                    cbErrOpt.selectedIndex = 2;
                                }
                                else if (t.toString() == "rollback-on-error")
                                {
                                    cbErrOpt.selectedIndex = 3;
                                }
                                break;
                            case "lock-option":
